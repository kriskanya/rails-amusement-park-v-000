<%= form_for(@user) do |f| %>

  <label>Username:</label>
  <%= f.text_field :name %>
  <label>Height:</label>
  <%= f.text_field :height %>
  <label>Happiness:</label>
  <%= f.text_field :happiness %>
  <label>Nausea:</label>
  <%= f.text_field :nausea %>
  <label>Tickets:</label>
  <%= f.text_field :tickets %>
  <label>Password:</label>
  <%= f.password_field :password %>
  <label>Admin?</label>
  <%= f.check_box :admin, :id => "user_admin" %>

  <%= f.submit 'Create User' %>

<% end %>